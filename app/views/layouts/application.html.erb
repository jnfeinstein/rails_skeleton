<!DOCTYPE html>
<% if Rails.env.production? %>
  <html manifest ="/application.manifest">
<% else %>
  <html>
<% end %>
  <head>
    <title>skeleton</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <!-- Stop pinch zoom on mobile devices -->
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0" />
    <!-- favicon -->
    <%= favicon_link_tag 'apple-touch-icon-iphone.png', :rel => 'apple-touch-icon', :type => 'image/png' %>
    <%= favicon_link_tag 'apple-touch-icon-ipad.png', :rel => 'apple-touch-icon', :type => 'image/png', :size => '72x72' %>
    <%= favicon_link_tag 'apple-touch-icon-iphone4.png', :rel => 'apple-touch-icon', :type => 'image/png', :size => '114x114' %>
    <%= favicon_link_tag 'apple-touch-icon-ipad3.png', :rel => 'apple-touch-icon', :type => 'image/png', :size => '144x144' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <div class="content main">
      <div class="loading">
        <%= image_tag 'loader.gif', alt: "Loading" %>
      </div>
    </div>
    <script type="text/html" class="template home">
      <%= render 'user/index' %>
    </script>
    <script type="text/html" class="template user new">
      <%= render 'user/new' %>
    </script>
    <script type="text/html" class="template session new">
      <%= render 'session/new' %>
    </script>
  </body>
</html>
